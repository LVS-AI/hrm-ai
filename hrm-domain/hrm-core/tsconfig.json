{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node16",
    "sourceMap": true,
    "outDir": "./dist",
    "lib": ["es2020"],
    "strict": false,
    "declaration": true,
  },

  "include": ["**/*.js", "**/*.json", "**/*.ts"],
  "exclude": ["node_modules", "unit-tests", "dist", "**/*.test.ts", "**/*.test.js"],
}
